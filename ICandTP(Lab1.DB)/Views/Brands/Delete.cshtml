@model ICandTP_Lab1.DB_.Brand

@{
    ViewData["Title"] = "Видалення марки";
}

<h1>Видалення</h1>

<h3>Ви впевненні що хочите видалити марку?</h3>
<br />
<div>@ViewBag.ErrorString</div>
<br />
<div>
    <h4>Brand</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BrandName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BrandName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Concern)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Concern)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country.CountryName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Повернутися до списку</a>
    </form>
</div>
