@model ICandTP_Lab1.DB_.Vechicle

@{
    ViewData["Title"] = "Create";
}

<h1>Додавання нового транспортного засобу</h1>

<h4>Транспортний засіб</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Vin" class="control-label"></label>
                <input asp-for="Vin" class="form-control" />
                <span asp-validation-for="Vin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineCapacity" class="control-label"></label>
                <input asp-for="EngineCapacity" class="form-control" />
                <span asp-validation-for="EngineCapacity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelId" class="control-label"></label>
                <select asp-for="ModelId" class ="form-control" asp-items="ViewBag.ModelId"></select>
            </div>
            <div class="form-group">
                <label asp-for="InsuarenceId" class="control-label"></label>
                <select asp-for="InsuarenceId" class ="form-control" asp-items="ViewBag.InsuarenceId"></select>
            </div>
            <div class="form-group">
                <label asp-for="PlateNum" class="control-label"></label>
                <input asp-for="PlateNum" class="form-control" />
                <span asp-validation-for="PlateNum" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfIssue" class="control-label"></label>
                <input asp-for="DateOfIssue" class="form-control" />
                <span asp-validation-for="DateOfIssue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OwnerTin" class="control-label"></label>
                <select asp-for="OwnerTin" class ="form-control" asp-items="ViewBag.OwnerTin"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
